{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "module": "commonjs",
    "allowJs": true,
    "noEmit": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,   
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
     }
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
